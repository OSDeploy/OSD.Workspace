{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  // Tasks Schema
  // https://code.visualstudio.com/docs/reference/tasks-appendix
  "version": "2.0.0",
  "tasks": [
    {
      "label": "About: Get OSDWorkspace information",
      "type": "shell",
      "command": "Get-OSDWorkspace",
      "problemMatcher": []
    },
    {
      "label": "GitHub: OSD.Workspace (repo, issues, pull requests)",
      "type": "shell",
      "command": "start 'https://github.com/OSDeploy/OSD.Workspace'",
      "problemMatcher": []
    },
    {
      "label": "PowerShell Gallery: Update OSD.Workspace",
      "type": "shell",
      "command": "Update-Module -Name OSD.Workspace -Verbose",
      "problemMatcher": []
    },
    {
      "label": "Docs: Update Workspace PowerShell Help for Dism (requires platyPS)",
      "type": "shell",
      "command": "Update-Help -Module 'Dism' -Force; New-MarkdownHelp -Module 'Dism' -OutputFolder '${workspaceFolder}\\docs\\powershell-help\\Dism' -Force",
      "problemMatcher": []
    },
    {
      "label": "Docs: Update Workspace PowerShell Help for OSD (requires platyPS)",
      "type": "shell",
      "command": "New-MarkdownHelp -Module 'OSD' -OutputFolder '${workspaceFolder}\\docs\\powershell-help\\OSD' -Force",
      "problemMatcher": []
    },
    {
      "label": "Docs: Update Workspace PowerShell Help for OSD.Workspace (requires platyPS)",
      "type": "shell",
      "command": "New-MarkdownHelp -Module 'OSD.Workspace' -OutputFolder '${workspaceFolder}\\docs\\powershell-help\\OSD.Workspace' -Force",
      "problemMatcher": []
    },
    {
      "label": "GitHub: Search for shared Library Submodules",
      "type": "shell",
      "command": "start 'https://github.com/search?q=OSDWSLibrary&type=repositories'",
      "problemMatcher": []
    },
    {
      "label": "Library (submodules): Add OSDCloud-Archive",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command Add-OSDWorkspaceLibrarySubmodule -Url https://github.com/OSDeploy/OSDWSLibrary-OSDCloud-Archive.git'"
      ],
      "problemMatcher": []
    },
    {
      "label": "Library (submodules): Add a Library Submodule",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command Add-OSDWorkspaceLibrarySubmodule'"
      ],
      "problemMatcher": []
    },
    {
      "label": "Library (submodules): Remove a Library Submodule",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command Remove-OSDWorkspaceLibrarySubmodule -Force -Verbose'"
      ],
      "problemMatcher": []
    },
    {
      "label": "Library (submodules): Update a Library Submodule",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command Update-OSDWorkspaceLibrarySubmodule'"
      ],
      "problemMatcher": []
    },
    {
      "label": "Import: Add a Windows 11 Operating System and Recovery Environment",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command Import-OSDWorkspaceWinOS'"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build: Select an imported WinRE and create a WinPE build",
      "command": "pwsh",
      "type": "shell",
      "windows": {
        "command": "Start-Process",
        "args": [
          "pwsh",
          "-Verb",
          "RunAs",
          "-ArgumentList",
          "'-NoExit -Command Build-OSDWorkspaceWinPE'"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Virtual Machine: Select a WinPE build and create a Hyper-V VM",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command New-OSDWorkspaceVM'"
      ],
      "problemMatcher": []
    },
    {
      "label": "USB Drive: Select a WinPE build and create a bootable USB Drive",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command New-OSDWorkspaceUSB'"
      ],
      "problemMatcher": []
    },
    {
      "label": "USB Drive: Select a WinPE build and update a bootable USB Drive",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "pwsh",
        "-Verb",
        "RunAs",
        "-ArgumentList",
        "'-NoExit -Command Update-OSDWorkspaceUSB'"
      ],
      "problemMatcher": []
    }
  ]
}