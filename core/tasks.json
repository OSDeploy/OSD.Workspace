    {
      "label": "Build: Select an imported WinRE and create a WinPE build",
      "command": "pwsh",
      "type": "shell",
      "windows": {
        "command": "Start-Process",
        "args": [
          "pwsh",
          "-Verb",
          "RunAs",
          "-ArgumentList",
          "'-NoExit -Command Build-OSDWorkspaceWinPE'"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "problemMatcher": []
